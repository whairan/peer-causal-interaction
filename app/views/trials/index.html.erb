<%= render partial: "partials/devise_navbar" %>

<div class="container content page-wrapper pagepad">
  <%= render "partials/flash" %>
  <p id="notice"><%= notice %></p>
  <div class="panel panel-primary">
      <div class="panel-heading">
        <h4 class="panel-title"><i class="fa fa-flask" aria-hidden="true"></i> Trials <span class="badge"><%=@trials.count%></span>

        <% if current_user && (current_user.superadmin_role? || current_user.supervisor_role?) %>
        <%= link_to '<i class="fa fa-plus" aria-hidden="true"></i> Create New Trial'.html_safe, new_trial_path, class:"pull-right btn btn-success" %>
        <% end %>


        </h4>
      </div>
      <div class="panel-body">
      <div class="table-responsive tableItem">
        <table id="table" class="table table-hover table-striped tablesorter">
          <thead>
            <tr>
              <th>Drug</th>
              <th>Gov url</th>
              <th>Company</th>
              <th>About</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @trials.each do |trial| %>
              <tr>
                <td><%= trial.drug %></td>
                <td><%= trial.gov_url %></td>
                <td><%= trial.company %></td>
                <td><%= trial.about %></td>
                <td><%= link_to 'Show', trial %></td>
                <td><%= link_to 'Edit', edit_trial_path(trial) %></td>
                <td><%= link_to 'Destroy', trial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  <br>
</div>

