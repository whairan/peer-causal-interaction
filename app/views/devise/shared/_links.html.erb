<%- if controller_name != 'sessions' %>
	<%= link_to '<i class="fa fa-send" aria-hidden="true"></i> Log In'.html_safe, new_session_path(resource_name), class:"btn btn-success btn-block" %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<%= link_to '<i class="fa fa-send" aria-hidden="true"></i> Sign Up'.html_safe, new_registration_path(resource_name), class:"btn btn-success btn-block" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
	<%= link_to '<i class="fa fa-send" aria-hidden="true"></i> Forgot your password?'.html_safe, new_password_path(resource_name), class:"btn btn-success btn-block" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to '<i class="fa fa-send" aria-hidden="true"></i> Did not receive confirmation instructions?'.html_safe, new_confirmation_path(resource_name), class:"btn btn-success btn-block" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to '<i class="fa fa-send" aria-hidden="true"></i> Did not receive unlock instructions?'.html_safe, new_unlock_path(resource_name), class:"btn btn-success btn-block" %>
<% end -%>


