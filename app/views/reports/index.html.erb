<p id="notice"><%= notice %></p>

<h1>Reports</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Attendance</th>
      <th>Assignments</th>
      <th>Participation</th>
      <th>Sleep</th>
      <th>Exercise</th>
      <th>Meals</th>
      <th>Feedback</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.user %></td>
        <td><%= report.attendance %></td>
        <td><%= report.assignments %></td>
        <td><%= report.participation %></td>
        <td><%= report.sleep %></td>
        <td><%= report.exercise %></td>
        <td><%= report.meals %></td>
        <td><%= report.feedback %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

