
<%= form_for(feedback) do |f| %>
  
  <% if feedback.errors.any? %>
    <%= render partial: "partials/create_errors", locals: {object: feedback, name:"feedback"} %>
  <% end %>

  <%= f.hidden_field :report_id,:value=>@report.id %>
  <%= f.hidden_field :user_id,:value=>@user.id %>

  <div class="input-group stpad">
    <span class="input-group-addon addon3">Class Attendance</span>
    <%= f.select :attendance, options_for_select([["Select feedback ...",nil],["GOOD",1],["OKAY",0],["POOR",-1]],:selected=>feedback.attendance),{}, {:class => 'form-control'} %>
  </div>

  <div class="input-group stpad">
    <span class="input-group-addon addon3">Assignments</span>
    <%= f.select :assignments, options_for_select([["Select feedback ...",nil],["GOOD",1],["OKAY",0],["POOR",-1]],:selected=>feedback.assignments),{}, {:class => 'form-control'} %>
  </div>

  <div class="input-group stpad">
    <span class="input-group-addon addon3">Class Participation</span>
    <%= f.select :participation, options_for_select([["Select feedback ...",nil],["GOOD",1],["OKAY",0],["POOR",-1]],:selected=>feedback.participation),{}, {:class => 'form-control'} %>
  </div>

  <div class="input-group stpad">
    <span class="input-group-addon addon3">Sleep</span>
    <%= f.select :sleep, options_for_select([["Select feedback ...",nil],["GOOD",1],["OKAY",0],["POOR",-1]],:selected=>feedback.sleep),{}, {:class => 'form-control'} %>
  </div>

  <div class="input-group stpad">
    <span class="input-group-addon addon3">Exercise</span>
    <%= f.select :exercise, options_for_select([["Select feedback ...",nil],["GOOD",1],["OKAY",0],["POOR",-1]],:selected=>feedback.exercise),{}, {:class => 'form-control'} %>
  </div>

  <div class="input-group stpad">
    <span class="input-group-addon addon3">Meals</span>
    <%= f.select :meals, options_for_select([["Select feedback ...",nil],["GOOD",1],["OKAY",0],["POOR",-1]],:selected=>feedback.meals),{}, {:class => 'form-control'} %>
  </div>

  <div class="input-group stpad">
    <span class="input-group-addon addon3">Comments</span>
    <%= f.text_area :comments, :rows => "2", :class => 'form-control' %>
  </div>


  <br>
  <div class="text-center stpad">
    <a class="btn btn-default" href="<%= user_root_url %>"><i class="fa fa-reply"></i> Cancel</a>
    <button role="button" type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-send"></i> Submit</button>
  </div>
<% end %>

