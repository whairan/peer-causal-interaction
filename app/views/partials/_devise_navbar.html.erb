	  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
	    <span class="sr-only">Toggle navigation</span>
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	    <span class="icon-bar"></span>
	  </button>
	</div>
  <div class="collapse navbar-collapse">
  	<ul class="nav navbar-nav">
  		<% if @user %>
		<li class="<%='active' if @active=="user"%>"><a href="<%= user_root_path(@user) %>"><i class="fa fa-home"></i> <%= @user.first_name %></a></li>
		<% end %>
		<li class="<%='active' if @active=="trials"%>"><a href="<%= trials_path(@user) %>"><i class="fa fa-flask"></i> Trials</a></li>
		<li class="<%='active' if @active=="companies"%>"><a href="<%= companies_path(@user) %>"><i class="fa fa-building"></i> Companies</a></li>
		<li class="<%='active' if @active=="drugs"%>"><a href="<%= drugs_path(@user) %>"><i class="fa fa-medkit"></i> Drugs</a></li>
		<li class="<%='active' if @active=="diseases"%>"><a href="<%= diseases_path(@user) %>"><i class="fa fa-user-md"></i> Diseases</a></li>


	</ul>
    <ul class="nav navbar-nav navbar-right">
		<% if @user %>
			<li><a href="<%=edit_user_registration_path%>" title="Display/Edit Profile"><i class="fa fa-cogs"></i> <%=@user.first_name%></a></li>
  			<li><a title="Logout" rel="nofollow" data-method="delete" href="/users/sign_out"><i class="fa fa-sign-out"></i> Logout</a></li>
		<% else %>
			<li><a href="#signinModal" data-toggle="modal" title="Returning User? Sign In"><i class="fa fa-sign-in"></i> Log In</a></li>
	  		<li><a href="#signupModal" data-toggle="modal" title="New To Transparency? Create A New Account"><i class="fa fa-user-plus"></i> Sign Up</a></li>
		<% end %>

	</ul>
  </div>
